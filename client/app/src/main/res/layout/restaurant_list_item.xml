<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/rounded_restaurant_item">

    <TextView
        android:id="@+id/restaurantListItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/restaurantListItemLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/restaurantListItemName"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/restaurantListItemDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/restaurantListItemName"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/restaurantListItemStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/restaurantListItemLocation"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="14sp" />
</RelativeLayout>
