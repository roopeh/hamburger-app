<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/toolbar_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Toolbar -->
            <include
                android:id="@+id/toolbar"
                layout="@layout/toolbar_layout" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/toolbar_content_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <!-- Menu content -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:paddingBottom="50dp"
        android:background="@color/backgroundDoubleInner"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/menuCloseButtonLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:padding="15dp" >

            <ImageButton
                android:id="@+id/menuCloseButton"
                android:background="@android:color/transparent"
                android:src="@drawable/menu_close_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="40dp"
                android:maxHeight="40dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:contentDescription="Close menu" />
        </LinearLayout>

        <ListView
            android:id="@+id/menuContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/menuCloseButtonLayout"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:choiceMode="singleChoice"
            android:divider="@color/backgroundInner"
            android:dividerHeight="1dp" />

        <!-- Hackfix for adding the missing last divider -->
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_below="@+id/menuContent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@color/backgroundInner" />
    </RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>
