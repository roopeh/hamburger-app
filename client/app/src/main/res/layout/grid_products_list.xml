<?xml version="1.0" encoding="utf-8"?>
<com.roopeh.app.hamburger.SquareGridview xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_inner_main"
    android:padding="10dp">

    <ImageView
        android:id="@+id/productsListGridImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_launcher_background"/>

    <TextView
        android:id="@+id/productsListGridText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/background_padding_top"
        android:layout_below="@id/productsListGridImage"
        app:autoSizeTextType="uniform"
        app:autoSizeMinTextSize="14sp"
        app:autoSizeMaxTextSize="20sp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="17sp" />
</com.roopeh.app.hamburger.SquareGridview>
