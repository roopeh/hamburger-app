<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@drawable/rounded_restaurant_item">

    <TextView
        android:id="@+id/couponsName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/background_padding_side"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/couponsDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/couponsName"
        android:layout_marginStart="@dimen/content_padding_side"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/couponsDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/couponsDescription"
        android:layout_marginTop="@dimen/background_padding_top"
        android:layout_marginStart="@dimen/background_padding_side"
        android:textColor="@color/black"
        android:textStyle="italic" />
</RelativeLayout>
